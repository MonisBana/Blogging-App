<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mab.bloggingapp.BlogSingleActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isScrollContainer="true">

            <ImageButton
                android:id="@+id/imageSelect"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="#00ffffff"
                android:elevation="1dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/preview"/>

            <TextView
                android:id="@+id/PostTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageSelect"
                android:paddingLeft="20dp"
                android:text="Post Title"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageSelect"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Post Title"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/PostDescLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleField"
                android:paddingLeft="20dp"
                android:text="Post Desc"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleField"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Post Description"
                android:padding="15dp"/>
            <Button
                android:id="@+id/removeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Remove Post"
                android:textColor="#ffffff"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


