<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/preview"/>

        <TextView
            android:id="@+id/NameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="NAme"
            android:textColor="#0488d1"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="kjjhvbjgfhnbhgdhvh"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="dgvhhgdsv"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dislikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/if_heart_285639gf"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/likebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:visibility="visible"
                app:srcCompat="@drawable/if_heartoutline_216236gf"/>

            <TextView
                android:id="@+id/likesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gfdsch"
                android:textSize="22sp"
                tools:text="sgb"
                android:layout_alignBottom="@+id/faltukaView"
                android:layout_toLeftOf="@+id/faltukaView"
                android:layout_toStartOf="@+id/faltukaView"/>

            <TextView
                android:id="@+id/faltukaView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/commentBtn"
                android:layout_toLeftOf="@+id/commentBox"
                android:layout_toStartOf="@+id/commentBox"
                android:text="      "/>


            <EditText
                android:id="@+id/commentBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/commentBtn"
                android:layout_toStartOf="@+id/commentBtn"
                android:hint="Write a Comment"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"/>

            <ImageButton
                android:id="@+id/commentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:src="@drawable/comment"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>